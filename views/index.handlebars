<!-- burgers that are ready are listed here -->
<div class="container">
  <div class="row">
    <div class="col-md-6 text-center">
      <div class="mycontent-left">
        <h4> Your burgers are ready</h4>
          <div class="row" id="burgerUpdate">
            {{#each burgersReady}}
          <!--  {{burger_name}} -->
              <div class="col-sm-6 text-center">
                  <h4 align="left">{{burger_name}}</h4>
              </div>
                <div class="col-sm-3 text-center">
                  <form method="POST" action="/update?_method=PUT" class="create-form">
                        <button type="button" name="burgerUpdate" value={{id}} class="btn btn-danger">Devour!</button>
                  </form>
                </div>
            {{/each}}
          </div>
      </div>
    </div>

<!-- devoured burgers are here-->
    <div class="col-md-6 text-center">
      <div class="mycontent-right">
          <h4> Burgers devoured!</h4>
          <div class="row">
            {{#each burgersGone}}
            <!--   {{#if this.devoured}} -->
                <div class="col-sm-6 text-center">
                    <h4 align="left">{{burger_name}}</h4>
                </div>
                    <div class="col-sm-3 text-center">
                      <form method="POST" action="/moreBurgers?_method=PUT">
                            <button type="button" name="burger_id" value={{id}} class="btn btn-danger">Make more!</button>
                      </form>
                    </div>


            {{/each}}
          </div>
        </div>
    </div>

</div>
</div>
