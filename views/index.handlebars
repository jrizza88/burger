
<!-- burgers that are ready are listed here -->
<div class="container">
  <div class="row">
    <div class="col-md-6">
    <!--    <div class="mycontent-left">-->
        <ul>
        <h4> Ready to eat burgers!</h4>
          <div id="burgerUpdate">
            {{#each burgers}}
              {{#unless this.devoured}}
                    <li>
          <!--  {{burger_name}} -->
                <div>
                  <h4>Burger is ready!</h4>
                    {{this.id}}. {{this.burger_name}}
                <!--  <div class="col-sm-3 text-center">-->

                  <form id="burgerUpdate" action="/update?_method=PUT" method="POST">
                  								<div class="input-group">
                  									<input type="hidden" class="form-control" name="id" value="{{this.id}}">
                  									<span class="input-group-btn">
                  										<button type="submit" class="btn btn-danger" id="submitBurger">Devour!</button>
                  									</span>
                  								</div>
                              </form>
                         </div>
                      </li>
                  {{/unless}}
              {{/each}}
                </div>
            </ul>

    </div>




<!-- devoured burgers are here-->
    <div class="col-md-6">
  <!--     <div class="mycontent-right"> -->
        <ul>
  				<h4> Devoured burgers</h4>
  					{{#each burgers}}
  						{{#if this.devoured}}
  						<li>
  							<p id="p2">
  								{{this.id}}. {{this.burger_name}}
  									<form id="devouredBurgers" action="/delete?_method=DELETE" method="POST">
  									<div class="input-group">
  										<input type="hidden" class="form-control" name="id" value="{{this.id}}">
  										<span class="input-group-btn">
  											<button class="btn btn-default" type="submit" id="submitBurger">Im Stuffed!</button>
  										</span>
  									</div>
  								</form>
  							</p>
  						</li>
  					{{/if}}
  				{{/each}}
  			</ul>
    </div>
      <!--  </div>-->


  </div>
</div>
